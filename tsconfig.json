{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist-types",
    "composite": false,
    "noEmit": false,
    "checkJs": false
  },
  "include": [
    "./plugin/**/*",
    "./plugin/**/*.d.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/tests/**/*.ts",
    "dist-types",
    "addon",
    "node_modules/**/*"
  ]
}
